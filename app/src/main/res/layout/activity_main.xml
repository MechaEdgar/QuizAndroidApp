<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.android.quizzapp.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question1"
            style="@style/BaseStyle"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intentAnswer1"
            style="@style/MainCheckboxStyle"
            />
        <RadioButton
            android:id="@+id/correctAnswerOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intentAnswer2"
            style="@style/MainCheckboxStyle"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intentAnswer3"
            style="@style/MainCheckboxStyle"
            />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question2"
            style="@style/BaseStyle"
            />
        <CheckBox
            android:id="@+id/correctAnswerTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viewAnswer1"
            style="@style/MainCheckboxStyle"
            />
        <CheckBox

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viewAnswer2"
            style="@style/MainCheckboxStyle"
            />
        <CheckBox

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viewAnswer3"
            style="@style/MainCheckboxStyle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question3"
            style="@style/BaseStyle"
            />
        <CheckBox

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toastAnswer1"
            style="@style/MainCheckboxStyle"
            />
        <CheckBox
            android:id="@+id/correctAnswerThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toastAnswer2"
            style="@style/MainCheckboxStyle"
            />
        <CheckBox

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toastAnswer3"
            style="@style/MainCheckboxStyle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question4"
            style="@style/BaseStyle"
            />

        <CheckBox
            android:id="@+id/correctAnswerFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relativeLayoutAnswer1"
            style="@style/MainCheckboxStyle"
            />

        <CheckBox

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relativeLayoutAnswer2"
            style="@style/MainCheckboxStyle"
            />
        <CheckBox

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relativeLayoutAnswer3"
            style="@style/MainCheckboxStyle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question5"
            style="@style/BaseStyle"
            />
        <CheckBox

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/linearLayoutAnswer1"
            style="@style/MainCheckboxStyle"
            />
        <CheckBox
            android:id="@+id/correctAnswerFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/linearLayoutAnswer2"
            style="@style/MainCheckboxStyle"
            />
        <CheckBox

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/linearLayoutAnswer3"
            style="@style/MainCheckboxStyle"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz"
            android:onClick="Score"
            />




    </LinearLayout>
</ScrollView>
